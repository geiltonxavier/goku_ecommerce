<p id="notice"><%= notice %></p>

<h1>Endereços</h1>
<%= form_tag(addresses_path, method: "get", class: "navbar-form navbar-left") do %>
  <div class="form-group">
    <%= text_field_tag "zip_code", params[:zip_code], class: "form-control", placeholder: "Buscar por CEP" %>
    <%= submit_tag "Buscar", class: "btn btn-default" %>   
  </div>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>CEP</th>
      <th>Rua</th>
      <th>Estado</th>
      <th>Cidade</th>
      <th>Bairro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.zip_code %></td>
        <td><%= address.street %></td>
        <td><%= address.state %></td>
        <td><%= address.city %></td>
        <td><%= address.neighborhood %></td>
        <td><%= link_to 'Detalhes', address, class: "btn btn-info glyphicon glyphicon-align-justify" %></td>
        <td><%= link_to "Editar", edit_address_path(address), class:"btn btn-warning glyphicon glyphicon-pencil" %></td>
        <td><%= link_to 'Excluir', address, method: :delete, data: { confirm: 'Você tem certeza que deseja Excluir?' }, class: 'btn btn-danger glyphicon glyphicon-trash' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Endereço', new_address_path, class: "btn btn-primary" %>
